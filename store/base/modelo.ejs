<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Etiquetas de Prateleira</title>
    <style>
        * {
            box-sizing: border-box;
            padding: 0;
            margin: 0;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            color: #000;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding-left: 0.2rem;
            padding-right: 0.2rem;
        }
        ul {
            list-style: none;
            padding: 0;
            display: flex;
            flex-direction: column;
            gap: 10px;
            width: 100%; /* Largura m√°xima do PDF */
        }
        .etiqueta {
            width: 100%;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 0.4rem;
        }
        .etiqueta_main {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding: 0.4rem;
        }
        .etiqueta_main h3 {
            color: #000;
            font-size: 0.7rem;
            text-align: left;
            margin-bottom: 0.5rem;
        }
        .etiqueta_main_info {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .etiqueta_main_info span {
            color: #888888;
            font-size: 16px;
            font-weight: 600;
            font-style: italic;
        }
        .etiqueta_main_por {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            background-color: #000;
            padding: 0.4rem;
        }
        .etiqueta_main_por label {
            font-size: 17px;
            color: #fff;
        }
        .etiqueta_main_por span {
            font-size: 3rem;
            color: #fff;
            font-weight: 800;
            margin-top: -14px;
            /* padding-left: 1rem; */
        }
    </style>
</head>
<body>
    <ul>
        <% etiquetas.forEach(etiqueta => { %>
            <li class="etiqueta">
                <div class="etiqueta_main">
                    <h3><%= etiqueta.descricao %></h3>
                    <div class="etiqueta_main_info">
                        <span>De: <%= etiqueta.precoAntigo %></span>
                        <span><%= etiqueta.codigo %></span>
                    </div>
                </div>
                <div class="etiqueta_main_por">
                    <label>Por:</label>
                    <span><%= etiqueta.precoNovo %></span>
                </div>
            </li>
        <% }) %>
    </ul>
</body>
</html>
